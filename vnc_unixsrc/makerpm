#!/bin/bash

M32=
TARGET=
if [ `uname -m` = 'x86_64' ];then
	M32='M32=yes'
	TARGET='--target i386'
fi

if [ "$1" = "clean" ]; then
xmkmf || exit -1
make clean || exit -1
cd Xvnc
if [ -f Makefile ]; then
	make clean || exit -1
	./configure || exit -1
else
	./configure || exit -1
	make clean || exit -1
fi
cd ..
fi

xmkmf || exit -1
make World || exit -1
cd Xvnc
./configure || exit -1
make || exit -1
cd ..

rm -rf rpms/
mkdir -p rpms/RPMS
cd rpms; ln -fs .. BUILD; cd ..

BUILD=`date +%Y%m%d`
VERSION=0.3.1
rpmbuild -bb --buildroot `pwd`/rpms/TurboVNC-buildroot --define "_topdir `pwd`/rpms" \
	--define "_bindir /opt/TurboVNC/bin" --define "_mandir /opt/TurboVNC/man" \
	--define "_datadir /opt/TurboVNC" --define "_version $VERSION" \
	--define "_build $BUILD" \
	$TARGET turbovnc.spec

mv rpms/RPMS/i386/turbovnc-$VERSION-$BUILD.i386.rpm turbovnc.i386.rpm

rm -rf rpms/
